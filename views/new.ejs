<% include partials/header %>

<div class="container">
    <h1 class="text-center py-3">Create New Campground</h1>
    <div class="row text-center">
        <div class="col-lg-4"></div>
        <form action="/campgrounds" method="POST" class="col-lg-4">
            <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name of a camp" required>
            </div>
            <div class="form-group">
            <input type="text" class="form-control" name="image" placeholder="url of an image" required>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
            <div class="form-group">
            <p><a href="/campgrounds" class="btn btn-md btn-dark btn-block">Go Back</a></p>
            </div>
        </form>
        <div class="col-lg-4"></div>
    </div>
    
</div>

<% include partials/footer %>