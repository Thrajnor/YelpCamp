<% include partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>view our hand-picked campgrounds form all over the world</p>
            <p><a href="/campgrounds/new" class="btn btn-primary btn-md">Create New Campground</a></p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% for (var i = 0; i < campgrounds.length; i++) {%>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail img-fluid">
                    <img class="img-thumbnail img-fluid" src="<%= campgrounds[i].image %>">
                    <h4><%= campgrounds[i].name %></h4>
                </div>
            </div>
        <% }; %>
    </div>
</div>

<% include partials/footer %>